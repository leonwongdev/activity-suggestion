<!DOCTYPE html>
<html>
  <head>
    <title>Activity Suggester</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/styles/style.css" />
  </head>
  <body>
    <div class="container">
      <div id="activity-container" class="text-center mt-5">
        <h2 id="activity">Generating random activity...</h2>
      </div>
      <script src="/scripts/common.js"></script>
      <div id="result-container" class="mt-5">
        <% if (message) { %>
        <p class="alert alert-danger"><%= message %></p>
        <% } %>
        <h1 class="mb-4">Activity: <%= activityPayload.activity %></h1>

        <% for(let i = 0; i < 3 && i < videoData.items.length; i++) { %>
        <div class="mb-5">
          <h2><%- videoData.items[i].snippet.title %></h2>
          <p><%= videoData.items[i].snippet.description %></p>
          <div class="embed-responsive embed-responsive-16by9">
            <iframe
              class="embed-responsive-item"
              src="https://www.youtube.com/embed/<%= videoData.items[i].id.videoId %>"
              frameborder="0"
              allowfullscreen
            ></iframe>
          </div>
          <hr />
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
